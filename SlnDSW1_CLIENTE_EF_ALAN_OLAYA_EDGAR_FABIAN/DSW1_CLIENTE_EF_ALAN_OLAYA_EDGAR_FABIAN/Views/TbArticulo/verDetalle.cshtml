@model DSW1_CLIENTE_EF_ALAN_OLAYA_EDGAR_FABIAN.Models.TbArticulo

@{
    ViewData["Title"] = "verDetalle";
}

<h1>DarDeBajaArticulo</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TbArticulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodArt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodArt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomArt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomArt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UniMed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniMed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PreArt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreArt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StkArt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StkArt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DadoDeBaja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DadoDeBaja)
        </dd>
    </dl>

    

    <!-- Formulario para dar de baja -->
    <form method="post" asp-action="DarDeBajaArticuloConfirmado" asp-route-id="@Model.CodArt" onsubmit="return confirmDelete('@Model.NomArt')">
        <button type="submit" class="btn btn-danger">Dar de Baja</button>
    </form>

    <!-- Botón de cancelar -->
    <div class="mb-3">
        <a href="@Url.Action("IndexTbArticulo", "TbArticulo")" class="btn btn-secondary">Cancelar</a>
    </div>

</div>

<!-- Agregar JavaScript para la confirmación -->
<script>
    function confirmDelete(nombreArticulo) {
        return confirm("¿Estás seguro de dar de baja el artículo: " + nombreArticulo + "?");
    }
</script>

